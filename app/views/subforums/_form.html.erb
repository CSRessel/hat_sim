<%= form_for @subforum do |form| %>
  <% if form.object.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-error">
        The form contains <%= pluralize(form.object.errors.count, "error") %>.
      </div>
      <ul>
      <% form.object.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div><%= form.label :name %><br />
  <%= form.text_field :name %></div>
  <div><%= form.submit 'Add Topic' %></div>
<% end %>
